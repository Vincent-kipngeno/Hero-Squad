{{#partial "content"}}
    {{#if editHero}}
        <div style="color:purple; text-align: center;">
            <h1>Edit this Hero!</h1>
        </div>
        <form class="form" action="/heroes/{{hero.id}}" method="post">
            <div class="form-group">
                <label for="name">Edit this hero's name:</label>
                <input id="name" name="name" class="form-control" type="text" value="{{hero.name}}">
            </div>
            <div class="form-group">
                <label for="age">Edit this hero's age:</label>
                <input id="age" name="age" class="form-control" type="number" value="{{hero.age}}">
            </div>
            <div class="form-group">
                <label for="specialPower">Edit this hero's special Power:</label>
                <select id="specialPower" class="form-control" name="specialPower" required>
                    <option value="Superman">Superman</option>
                    <option value="Green lantern">Green Lantern</option>
                    <option value="Martian Manhunter">Martian Manhunter</option>
                    <option value="The Flash">The Flash</option>
                    <option value="Wonder Woman">Wonder Woman</option>
                </select>
            </div>
            <div class="form-group">
                <label for="weakness">Edit this hero's weakness:</label>
                <select id="weakness" class="form-control" name="weakness" required>
                    <option value="Magic">Magic</option>
                    <option value="Red Sun">Red Sun</option>
                    <option value="Kryptonite">Kryptonite</option>
                    <option value="Fear">Fear</option>
                    <option value="Cold and No Gravity">Cold and No Gravity</option>
                    <option value="Fire">Fire</option>
                    <option value="Lasso">Lasso</option>
                </select>
            </div>
            <div class="form-group">
                <label for="squadId">Update this hero's squad:</label>
                {{#if squadsWithSpace}}
                    <select id="squadId" name="squadId" class="form-control">
                        {{#each squadsWithSpace}}
                            <option value="{{id}}">{{name}}</option>
                        {{/each}}
                    </select>
                    <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
                {{else}}
                    <select id="squadId" name="squadId" class="form-control">
                            <option value="{{squad.id}}">{{squad.name}}</option>
                    </select>
                    <p>All squads are full if you would like to change? <a href="/squads/new">Add a new one first.</a></p>
                {{/if}}
            </div>
            <p>Don't see the right squad?<a href="/squads/new">Add a new one first.</a></p>
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{else}}
        <div style="color:purple; text-align:center;">
            <h2>Add a new Hero!</h2>
        </div>
        <form class="form" action="/heroes" method="post">
            {{#if squads}}
                {{#if squadsWithSpace}}
                    <div class="form-group">
                        <label for="name">Hero name</label>
                        <input id="name" name="name" class="form-control" type="text" required>
                    </div>
                    <div class="form-group">
                        <label for="age">Edit this hero's age:</label>
                        <input id="age" name="age" class="form-control" type="number" required>
                    </div>
                    <div class="form-group">
                        <label for="specialPower">Edit this hero's special Power:</label>
                        <select id="specialPower" class="form-control" name="specialPower" required>
                            <option value="Superman">Superman</option>
                            <option value="Green lantern">Green Lantern</option>
                            <option value="Martian Manhunter">Martian Manhunter</option>
                            <option value="The Flash">The Flash</option>
                            <option value="Wonder Woman">Wonder Woman</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="weakness">Edit this hero's weakness:</label>
                        <select id="weakness" class="form-control" name="weakness" required>
                            <option value="Magic">Magic</option>
                            <option value="Red Sun">Red Sun</option>
                            <option value="Kryptonite">Kryptonite</option>
                            <option value="Fear">Fear</option>
                            <option value="Cold and No Gravity">Cold and No Gravity</option>
                            <option value="Fire">Fire</option>
                            <option value="Lasso">Lasso</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label for="squadId">Add squad to this hero:</label>
                        <select id="squadId" class="form-control" name="squadId" required>
                            {{#each squadsWithSpace}}
                                <option value="{{id}}">{{name}}</option>
                            {{/each}}
                        </select>
                    </div>
                    <p>Don't see the right squad?<a class="btn btn-success" href="/squads/new">Add a new one first.</a></p>
                {{else}}
                    <h3> All squads are full. You'll need to add a squad before you add a task. <a href="/squads/new">Add one here.</a> </h3>
                {{/if}}
            {{else}}
                <h3> You'll need to add a squad before you add a task. <a href="/squads/new">Add one here.</a> </h3>
            {{/if}}
            <button type="submit" class="btn btn-default">Go!</button>
        </form>
    {{/if}}
{{/partial}}

